@using FuGetsu.Ui.Shared.Navbar
@using FuGetsu.Ui.Shared.Scripts
@using MudBlazor
@inherits LayoutComponentBase

<MyMudThemeProvider IsDarkMode="darkMode" />
<MyMudProviders />
<CspRules />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6">Fu Getsu</MudText>
        <MudSpacer />
        <CartBadge IsDarkMode="darkMode" />
        <DarkModeToggle @bind-IsDarkMode="darkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="drawerOpen" Elevation="1">
        <MudDrawerHeader Class="d-flex align-center justify-center">
            @* TODO: change logo *@
            <MudImage Src="/icon-192.png" Height="36" Width="36" />
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
<DownloadFileFromStream />

@code {

    bool drawerOpen = true;
    bool darkMode;

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}